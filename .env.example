# Wisdom Agent Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# LLM API Keys
# ===========================================

# Anthropic (Claude) - Primary provider
ANTHROPIC_API_KEY=your_anthropic_key_here

# OpenAI (GPT) - Optional secondary provider
OPENAI_API_KEY=your_openai_key_here

# Nebius AI - Optional alternative provider
NEBIUS_API_KEY=your_nebius_key_here
NEBIUS_BASE_URL=https://api.tokenfactory.nebius.com/v1

# ===========================================
# Database (Week 2 - PostgreSQL)
# ===========================================

# Database connection settings
DB_USER=wisdom_agent
DB_PASSWORD=wisdom_dev_pass
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wisdom_agent_db

# Full database URL (constructed from above, or override directly)
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Vector dimension for embeddings (all-MiniLM-L6-v2 uses 384)
VECTOR_DIMENSION=384

# ===========================================
# Server Settings
# ===========================================

# Host and port for the API server
HOST=0.0.0.0
PORT=8000

# Debug mode (enables auto-reload)
DEBUG=false

# ===========================================
# Future Settings (Not Yet Implemented)
# ===========================================

# Google Fact Check API (for democracy tools)
# GOOGLE_FACT_CHECK_API_KEY=your_key_here

